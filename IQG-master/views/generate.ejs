   <br>
   <br>
  	<input type="number" min="0" step="1" pattern="\d*" onkeydown="return FilterInput(event)" onpaste="handlePaste(event)" ng-model=noQuestions class="w3-input w3-border w3-round " style="width:50%" name="questionNo"></input>
