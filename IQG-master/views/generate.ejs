	<div ng-repeat="x in find">
    <p class="w3-center">Q: {{ x.name }} ({{ x.estime }})</p>
    <br>
    <p class="w3-center">A. {{ x.op1 }}</p>         			<p class="w3-center">{{ x.category }} - {{ x.subcategory }}</p>
    <p class="w3-center">B. {{ x.op2 }}</p>						<p class="w3-center">Difficulty: {{ x.qlevel }}</p>
    <p class="w3-center" ng-hide="op3hide" ng-model="op3" >C. {{ x.op3 }}</p>
    <p class="w3-center" ng-hide="op4hide" ng-model="op4" >D. {{ x.op4 }}</p>
  </div>
</div>

